<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/settings">
        <CheckBoxPreference
            android:defaultValue="false"
            android:key="verbose"
            android:summary="@string/enable_log_summary"
            android:title="@string/enable_log" />
        <CheckBoxPreference
            android:defaultValue="true"
            android:key="popup_bars"
            android:summary="@string/popup_bars_summary"
            android:title="@string/popup_bars" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/version">
        <Preference android:title="@string/version_detail" />
        <Preference
            android:summary="http://sited.noear.org/"
            android:title="@string/sited_detail">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="http://sited.noear.org/" />
        </Preference>
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/disclaimer">
        <Preference
            android:summary="@string/only_for_testing_purposes"
            android:title="@string/test_only" />
        <Preference
            android:summary="https://github.com/Goshin/Buka-Darkness"
            android:title="@string/source_code">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/Goshin/Buka-Darkness" />
        </Preference>
        <Preference
            android:summary="@string/publish_under_GPLv3"
            android:title="@string/GNU_public_license" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/developer">
        <Preference
            android:summary="@string/developer_email"
            android:title="John" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/thanks">
        <Preference
            android:summary="https://github.com/noear/SiteD"
            android:title="@string/thanks_to_DDCat">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="https://github.com/noear/SiteD" />
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>